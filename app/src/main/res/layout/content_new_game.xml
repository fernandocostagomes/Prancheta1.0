<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_new_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.NewGame"
    tools:showIn="@layout/activity_new_game">

    <TextView
        android:text="Selecione o Jogador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:id="@+id/textView2"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/spAddPlayers"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"/>
    <TextView
        android:text="@string/tvTitleArrivalOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spAddPlayers"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:id="@+id/tvTitleArrivalOrder"/>
    <GridView
        android:id="@+id/gvArrivalOrder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvTitleArrivalOrder"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"/>
</RelativeLayout>
